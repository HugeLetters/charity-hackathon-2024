---
import Footer from "@components/Footer/Footer.astro";
import Header from "@components/Header/Header.astro";
import AboutUs from "@components/Main/AboutUs/AboutUs.astro";
import Blog from "@components/Main/Blog/Blog.astro";
import CompanyStatus from "@components/Main/CompanyStatus/CompanyStatus.astro";
import Hero from "@components/Main/Hero/Hero.astro";
import HowToProcess from "@components/Main/HowToProcess/HowToProcess.astro";
import LatestServices from "@components/Main/LatestServices/LatestServices.astro";
import Pricing from "@components/Main/Pricing/Pricing.astro";
import Projects from "@components/Main/Projects/Projects.astro";
import Team from "@components/Main/Team/Team.astro";
import Testimonial from "@components/Main/Testimonial/Testimonial.astro";
import Shell from "@layouts/Shell.astro";
---

<!-- todo - minify assets(images,videos) --><!-- todo - segment spacing -->
<Shell>
	<header>
		<Header />
	</header>
	<main>
		<section id="home-segment">
			<Hero />
		</section>
		<section>
			<LatestServices />
		</section>
		<section id="about-segment">
			<AboutUs />
		</section>
		<section>
			<CompanyStatus />
		</section>
		<section id="projects-segment">
			<Projects />
		</section>
		<section>
			<HowToProcess />
		</section>
		<section id="testimonial-segment">
			<Testimonial />
		</section>
		<section id="team-segment">
			<Team />
		</section>
		<section id="pricing-segment">
			<Pricing />
		</section>
		<section id="blog-segment">
			<Blog />
		</section>
	</main>
	<footer id="footer">
		<Footer />
	</footer>
</Shell>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 5;
	}
</style>
