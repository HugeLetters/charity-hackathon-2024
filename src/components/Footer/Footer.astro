<style>
	.footer__inner {
		width: 100%;
		max-width: 1920px;
		margin: 0 auto;
	}

	/* MAP */
	.footer-map {
		width: 100%;
		height: 568px;
		transition: filter 500ms;
		filter: grayscale(0) contrast(1.1);
	}

	.footer-map:not(:is(:hover, :focus-within)) {
		filter: grayscale(1) contrast(1);
	}

	/* FORM */
	.form {
		width: 100%;
		max-width: 1296px;
		margin: -93px auto;
		background-color: var(--color-brand-primary);
		padding: 51px 110px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		background-image: url("img/mail-bg.png");
		background-repeat: no-repeat;
		background-position: 35% center;
		position: relative;
		z-index: 5;
	}

	.form__title {
		font-size: 32px;
		font-weight: 600;
		line-height: 42px;
		color: #fff;
	}

	.form__input-wrapper {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		max-width: 416px;
		border-bottom: 1px solid #fff;
		padding-bottom: 14px;
	}

	.form__input {
		font-size: 14px;
		line-height: 24px;
		color: #fff;
		background-color: transparent;
		flex: 1;
		outline: transparent;
	}

	.forn__input:focus {
	}

	.form__input::placeholder {
		color: rgba(255, 255, 255, 0.6);
	}

	.form__submit-btn {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 38px;
		height: 32px;
		background-color: #fff;
		transition: scale 200ms;
	}

	.form__submit-btn:hover {
		scale: 1.2;
	}

	.form__submit-btn-icon {
		transition: scale 200ms;
	}
	.form__submit-btn:hover .form__submit-btn-icon {
		scale: 1.6;
	}

	/* LINKS */
	.footer-info {
		font-family: var(--font-barlow);
		font-size: 16px;
		line-height: 26px;
		color: #b7b7b7;

		background-color: var(--color-text-primary);
		background-image: url("img/bg.svg");
		background-repeat: no-repeat;
		background-size: contain;
		background-position: bottom center;
		padding: 232px 0 140px 0;
	}

	.info-wrapper {
		width: 100%;
		max-width: 1296px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
	}

	.info {
		max-width: 408px;
	}

	.info__logo {
		display: inline-block;
		margin-bottom: 12px;
	}

	.info__logo-img {
		width: 221px;
		height: 75px;
	}

	.info__logo-img:hover {
	}

	.info__text {
		margin-bottom: 36px;
	}

	.info__date-title {
		font-family: var(--font-jost);
		font-weight: 600;
		color: #fff;
		margin-bottom: 6px;
	}

	.info__date {
		color: var(--color-brand-primary);
	}

	.link-item + .link-item {
		margin-top: 16px;
	}

	.link-item--title {
		font-family: var(--font-jost);
		font-weight: 600;
		color: #fff;
		margin-bottom: 24px;
	}

	.link {
		display: inline-block;
		transition: all 0.2s linear 0s;
	}

	.link:hover {
		transform: scale(1.1);
		color: var(--color-brand-primary);
	}

	/* COPY */

	.footer__copy-wrapper {
		background-color: #000;
		text-align: center;
		padding: 23px 0;
	}

	.footer__copy {
		font-family: "DM Sans", var(--font-sans-serif, sans-serif);
		font-size: 16px;
		line-height: 26px;
		color: #b7b7b7;
	}

	.footer__copy span {
		color: #fff;
	}
</style>
