<style>
	.header-wrapper {
		background-color: var(--color-text-primary);
	}

	.header__inner {
		display: flex;
		color: #fff;
		font-family: var(--font-barlow);
		font-size: 16px;
		line-height: 26px;
	}

	/* LOGO */
	.logo-wrapper {
		flex: 0 1 36rem;
		min-width: 14rem;
		display: flex;
		align-items: center;
		position: relative;
	}

	.logo-wrapper::before {
		content: "";
		display: block;
		flex-basis: 6rem;
		flex-shrink: 1;
	}

	.logo-wrapper::after {
		pointer-events: none;
		position: absolute;
		content: "";
		display: block;
		left: 0;
		top: 0;
		height: 149px;
		width: 578px;
		background-image: url("./img/header-bg.svg");
		background-repeat: no-repeat;
		background-position: left top;
		z-index: 5;
	}

	.logo {
		display: inline-block;
		position: relative;
		grid-column: 2;
		flex-shrink: 0;
		z-index: 10;
	}

	.logo-img {
		width: 221px;
		height: 75px;
	}

	.contacts {
		flex: 1 0 auto;
	}

	/* TOP */
	.top {
		display: flex;
		gap: 0.5rem;
		justify-content: space-between;
		font-size: 14px;
		line-height: 24px;
		color: var(--color-text-neutral);
		padding-block: 1rem;
		padding-inline: 2.5rem 2rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	.contact-info {
		display: flex;
		flex-grow: 9999;
		max-width: 39rem;
		justify-content: space-between;
		gap: 0.5rem;
		height: 1rem;
	}

	.contact-item {
		display: flex;
		gap: 0.5rem;
		align-items: center;
	}

	.socials-list {
		display: flex;
		gap: 1.25rem;
		align-items: center;
	}

	.socials-link {
		position: relative;
		color: var(--color-text-neutral);
		display: block;
		height: 0.75rem;
		transition-property: color, scale;
		transition-duration: 200ms;
	}

	.socials-link::before {
		content: "";
		position: absolute;
		inset: -0.5rem;
	}

	.socials-link:hover {
		color: white;
		scale: 1.2;
	}

	/* BOTTOM */
	.bottom {
		grid-area: bottom;
	}

	.links-list {
		display: flex;
		gap: 30px;
		margin-left: 42px;
	}

	.link {
		display: block;
		padding-block: 2rem;
		font-weight: 700;
		position: relative;
		transition: color 200ms;
		overflow-y: hidden;
	}

	.link:before {
		position: absolute;
		content: "";
		display: block;
		width: 100%;
		height: 4px;
		background-color: var(--color-brand-primary);
		left: 0;
		bottom: 0;
		transition: translate 200ms;
	}

	.link:hover {
		color: var(--color-brand-primary);
	}

	.link:hover::before {
		transition-delay: 300ms;
	}
	.link:not(:hover)::before {
		translate: 0 125%;
	}

	/* CTA */
	.cta {
		flex: 0 3 24rem;
		min-width: 13rem;
		display: flex;
		gap: 14px;
		align-items: center;
		border-left: 1px solid rgba(255, 255, 255, 0.1);
	}

	.cta__call-btn {
		width: 60px;
	}

	.cta__title {
		font-family: var(--font-jost);
		font-size: 14px;
		line-height: 24px;
		color: var(--color-text-neutral);
	}

	.cta__call {
		font-size: 16px;
		line-height: 26px;
		font-weight: 600;
	}

	svg {
		height: 100%;
	}
</style>
