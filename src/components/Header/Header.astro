<style>
	.header-wrapper {
		background-color: var(--color-text-primary);
	}

	.header__inner {
		color: #fff;
		font-family: var(--font-barlow);
		font-size: 16px;
		line-height: 26px;

		width: 100%;
		max-width: 1920px;
		margin: 0 auto;

		display: grid;
		grid-template-areas:
			"logo top cta"
			"logo bottom cta";
	}

	/* LOGO */
	.logo-wrapper {
		grid-area: logo;
		align-content: center;
		padding-right: 264px;
		position: relative;
	}

	.logo-wrapper::after {
		position: absolute;
		content: "";
		display: block;
		left: 0;
		top: 0;
		height: 156px;
		width: 578px;
		background-image: url("img/header-bg.svg");
		background-repeat: no-repeat;
		background-position: left top;
		z-index: 5;
	}

	.logo {
		display: inline-block;
		position: relative;
		z-index: 10;
	}

	.logo-img {
		width: 221px;
		height: 75px;
	}

	/* TOP */
	.top {
		grid-area: top;
		font-size: 14px;
		line-height: 24px;
		color: var(--color-text-neutral);
		padding: 16px 0;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	.adress {
		padding-left: 17px;
		background-image: url("img/key.svg");
		background-repeat: no-repeat;
		background-position: left center;
		background-size: 8px 16px;
		margin-left: 42px;
	}

	.mail {
		padding-left: 21px;
		background-image: url("img/mail.svg");
		background-repeat: no-repeat;
		background-position: left center;
		background-size: 12px 11px;
		margin-left: 42px;
	}

	.opening-hours {
		padding-left: 21px;
		background-image: url("img/clock.svg");
		background-repeat: no-repeat;
		background-position: left center;
		background-size: 12px 12px;
		margin-left: 42px;

		display: inline-block;
	}

	.socials-list {
		display: inline-flex;
		gap: 20px;
		max-width: 96px;
		margin-left: auto;
		align-items: center;
	}

	.icon-facebook {
		width: 6px;
		height: 10px;
	}

	.icon-instagram,
	.icon-twitter,
	.icon-linkedin {
		width: 10px;
		height: 10px;
	}

	/* BOTTOM */
	.bottom {
		grid-area: bottom;
		padding: 30px 0 32px;
	}

	.links-list {
		display: flex;
		gap: 30px;
		margin-left: 42px;
	}

	.link {
		font-weight: 700;
		line-height: 26px;
		position: relative;
		transition: all 0.2s linear 0s;
	}

	.link:hover {
		color: var(--color-brand-primary);
	}

	.link:hover:before {
		position: absolute;
		content: "";
		display: block;
		width: 100%;
		height: 4px;
		background-color: var(--color-brand-primary);
		left: 0;
		bottom: -37px;
	}

	/* CTA */
	.cta {
		grid-area: cta;
		display: flex;
		gap: 14px;
		align-items: center;
		padding-left: 23px;
		border-left: 1px solid rgba(255, 255, 255, 0.1);
	}

	.cta__call-btn {
	}

	.icon-call rect {
		fill: var(--color-brand-primary);
	}

	.cta__title {
		font-family: var(--font-jost);
		font-size: 14px;
		line-height: 24px;
		color: var(--color-text-neutral);
	}

	.cta__call {
		font-size: 16px;
		line-height: 26px;
		font-weight: 600;
	}
</style>
