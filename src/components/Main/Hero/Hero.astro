---
import MainSegment from "@components/shared/MainSegment.astro"
import Link from '@components/shared/Link.astro'
---

<MainSegment>
<section class="hero">
    <div class="hero__container">
        <div class="hero__content">
            <h1 class="heading-1">Experts In Construction</h1>
            <p class="text-desc">
                The construction industry boasts a diverse range of experts, each playing
                a crucial role in bringing a project from vision to reality. 
            </p>
            <Link theme="primary" href="#">Explore More</Link>
        </div>
        <div class="hero__image">
            <div class="image">
                <img src="img/cheerful-engineer-with-set-square.png" alt="cheerful-engineer">
            </div>
        </div>
    </div>
    <div class="hero__decorate"></div>
</section>
</MainSegment>


<style>
    @import url(@assets/tokens.css);
    .hero {
        position: relative;
        grid-column: 1 / -1;
        width: 100%;
        height: 1010px;
        background-image: url('img/hero-back.png');
        background-size: cover;
        background-repeat: no-repeat;
    }

    .hero__container {
        position: relative;
        display: flex;
        justify-content: space-between;
        padding: 56px 0 59px 0;
        width: 1625px;
        margin: 0 auto;
    }

    .hero__content {
        padding-top: 142px;
        padding-bottom: 199px;
        width: 901px;
    }

    .heading-1 {
        margin-bottom: 6px;
        font-family: var(--font-jost);
        font-weight: 600;
        /* font-size: 158px; */
        font-size: 146px;
        line-height: 138px;
        color: #FFFFFF;
    }

    .text-desc {
        margin-bottom: 43px;
        font-family: var(--font-barlow);
        font-weight: 400;
        font-size: 24px;
        line-height: 34px;
        color: rgb(216, 216, 216);
    }

    .hero__image {
        position: relative;
        width: 640px;
        height: 722px;
        clip-path: polygon(0% 50%, 100% 0%, 100% 100%, 0% 100%);
        background-color: var(--color-brand-primary);
        border-radius: 10%;
    }

    .image {
        position: absolute;
        top: 20%;
        left: 20%;
        width: 60%;
    }

    .image img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .hero__decorate {
        position: absolute;
        bottom: -8.5%;
        left: 4%;
        width: 78px;
        height: 237px;
        background-image: url('img/crane.png');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
