<style>
	.projects {
		display: contents;
	}

	.projects__start {
		grid-column: 2 / 2;
		display: flex;
		justify-content: space-between;
		align-items: end;
		padding-bottom: 67px;
	}

	.navigation {
		display: flex;
		gap: 2rem;
		padding-bottom: 2rem;
	}

	.arrow {
		height: 1rem;
		transition: color 300ms;
	}

	.arrow:is(:hover, :focus-visible) {
		color: var(--color-brand-primary);
	}

	.arrow[data-dir="right"] {
		rotate: 180deg;
	}

	.projects__heading {
		margin-top: 3px;
		font-family: var(--font-jost);
		font-weight: 600;
		font-size: 3.25rem;
	}

	.projects__carousel {
		grid-column: 1 / -1;
		display: flex;
		gap: 1.5rem;
		overflow-x: scroll;
		scroll-snap-type: x mandatory;
		width: 100%;
		height: 27.7rem;
		-webkit-overflow-scrolling: touch;
	}

	.slide {
		flex: none;
		scroll-snap-align: start;
		width: 39rem;
		text-align: center;
	}

	.slide:hover .slide__content {
		opacity: 1;
	}

	.slide-1,
	.slide-3,
	.slide-5 {
		background-image: url("img/slide-1.jpg");
		background-repeat: no-repeat;
		background-size: contain;
	}

	.slide-2,
	.slide-4,
	.slide-6 {
		background-image: url("img/slide-2.jpg");
		background-repeat: no-repeat;
		background-size: contain;
	}

	.slide__content {
		padding: 10rem 1.9rem 1.9rem 1.9rem;
		opacity: 0;
		transition: opacity 0.2s ease-in;
	}

	.btn-primary {
		display: flex;
		justify-content: center;
		align-items: center;
		margin: 0 auto 3rem auto;
		border: 11px solid #d9d9d9;
		width: 3.75rem;
		height: 3.75rem;
		background-color: var(--color-brand-primary);
		transform: scale(1);
		transition: transform 0.2s ease-in;
	}

	.btn-primary svg path {
		stroke: white;
		transition: stroke 0.2s ease-in;
	}

	.btn-primary:hover {
		transform: scale(1.1);
	}

	.btn-primary:hover svg path {
		stroke: black;
	}

	.btns {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.btn-orange {
		padding: 0.4rem 1rem;
		width: max-content;
		color: #ffff;
		background-color: var(--color-brand-primary);
	}

	.btn-black {
		padding: 1rem 1.5rem;
		width: max-content;
		height: 4.6rem;
		font-family: var(--font-jost);
		font-weight: 600;
		font-size: 2rem;
		color: #ffff;
		background-color: var(--color-text-primary);
	}
</style>
